---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Picture } from '@astrojs/image/components';
---
<BaseLayout title = "HomePage">
  <main>
    <h1>Sarah Rainsberger</h1>

    <Picture src="/chickadee.JPG" alt="A cute chickadee on a branch" aspectRatio="896:672" widths={[300, 600, 896]} sizes="50vw" loading="eager"/>

    <p>Sarah photographs birds</p>
    <p class="bottom">...and codes entirely in the cloud, with no local development environment.</p>
  </main>
</BaseLayout>

<style>
  main {
    text-align: center;
  
  }

  img {
    margin: 0 auto;
    height: auto;
    width: 100%;
    max-height: 40vh;
    max-width: 40vh;
  }

  .bottom {
    margin-bottom: 0;
  }

</style>
