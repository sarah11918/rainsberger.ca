---
import BaseLayout from '../layouts/BaseLayout.astro'
const {content={}} = Astro.props;
const postDate = content.date.slice(0,10);
const postURL = `https://rainsberger.ca/posts/${content.slug}` 

//    <RelatedPosts content={content} />
---
<BaseLayout title = {content.title} hero = {content.hero} description = {content.description} postURL={postURL} alt = {content.alt}>
  <main>
    <p><em>{content.description}</em></p>
    <h1>{content.title}</h1>
    <div style="display:flex;">
    {content.tags.map((tag) => <div style="padding-right: 1.5em; font-weight: bold; color:#3d5262;"><p style="border-radius:10px; padding-top:0.25rem; padding-bottom:0.25rem; padding-left:0.35rem; padding-right:0.35rem; border: 1px solid rgb(144, 147, 216)"><a href={`/tags/${tag}`}>{tag}</a></p></div>)}
    </div>
    
    <p>Written by: {content.author} on {postDate}</p>
    <img src={content.hero} alt={content.alt}>
    <article>
      <slot />
    </article>
    <div style="display:flex;">
      {content.tags.map((tag) => <div style="padding-right: 1.5em; font-weight: bold; color:#3d5262;"><p style=" border-radius:10px; padding-top:0.25rem; padding-bottom:0.25rem; padding-left:0.35rem; padding-right:0.35rem; border: 1px solid rgb(144, 147, 216)"><a href={`/tags/${tag}`}>{tag}</a></p></div>)}
      </div>
      <p><a href="/posts">See more posts ...</a></p>
